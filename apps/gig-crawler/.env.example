# Strapi CMS Configuration
STRAPI_API_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token_here

# Brave AI Grounding API Configuration
# Get your API key from: https://api.search.brave.com/app/dashboard
# Free tier: 2,000-5,000 queries/month
BRAVE_API_KEY=your_brave_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Cron Schedule (optional - defaults to 2 AM daily)
# Format: minute hour day month dayOfWeek
# Example: "0 2 * * *" = every day at 2 AM
CRON_SCHEDULE=0 2 * * *

# Timezone for cron jobs (optional)
TZ=Europe/Athens

# Logging
LOG_LEVEL=info
